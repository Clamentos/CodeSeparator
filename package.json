{
  "name": "codeseparator",
  "displayName": "CodeSeparator",
  "description": "Draws a custom colored code separating line when /// or other comment triggers are detected.",
  "version": "1.0.0",
  "license": "SEE LICENSE IN LICENSE.md",
  "icon": "resources/ico.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Clamentos/CodeSeparator"
  },
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "CodeSeparator",
      "properties": {
        "CodeSeparator.color": {
          "type": "string",
          "default": "#666666",
          "description": "Set the color of the separator line."
        },
        "CodeSeparator.style": {
          "type": "string",
          "default": "solid",
          "enum": ["solid", "dotted", "dashed"],
          "description": "Set the separator line style."
        },
        "CodeSeparator.thickness": {
          "type": "integer",
          "default": 1,
          "description": "Set the separator line thickness in pixels."
        },
        "CodeSeparator.position": {
          "type": "string",
          "default": "top",
          "enum": ["top", "bottom"],
          "description": "Set the position of the separator line: top or bottom of the text line."
        },
        "CodeSeparator.triggers": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "Language to trigger mappings",
            "properties": {
              "language": {
                "type": "string",
                "description": "Name of the language."
              },
              "trigger": {
                "type": "string",
                "description": "Trigger pattern."
              }
            }
          },
          "description": "Set the trigger pattern for each language.",
          "default": [
            {
              "language": "c",
              "trigger": "///"
            },
            {
              "language": "cpp",
              "trigger": "///"
            },
            {
              "language": "csharp",
              "trigger": "///"
            },
            {
              "language": "go",
              "trigger": "///"
            },
            {
              "language": "java",
              "trigger": "///"
            },
            {
              "language": "javascript",
              "trigger": "///"
            },
            {
              "language": "javascriptreact",
              "trigger": "///"
            },
            {
              "language": "latex",
              "trigger": "%%"
            },
            {
              "language": "plaintext",
              "trigger": "///"
            },
            {
              "language": "python",
              "trigger": "##"
            },
            {
              "language": "rust",
              "trigger": "///"
            },
            {
              "language": "sql",
              "trigger": "---"
            },
            {
              "language": "typescript",
              "trigger": "///"
            },
            {
              "language": "typescriptreact",
              "trigger": "///"
            },
            {
              "language": "html",
              "trigger": "<!---->"
            },
            {
              "language": "xml",
              "trigger": "<!---->"
            },
            {
              "language": "swift",
              "trigger": "///"
            },
            {
              "language": "ruby",
              "trigger": "##"
            },
            {
              "language": "css",
              "trigger": "///"
            },
            {
              "language": "php",
              "trigger": "///"
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
